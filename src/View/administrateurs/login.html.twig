{% extends 'layout.html.twig' %}
{% block title %}Connexion d'un administrateur - {{ parent }}{% endblock %}
{% block content %}
 <main class="container">
    <h1>Connexion d'un compte administrateur</h1>
    <form action="{{ url('/administrateurs/connexion') }}" method="post" class="w-100" enctype="multipart/form-data">
      {# <input type="hidden" name="_token" value="{{ csrf_token('admin_form') }}"> #}
      <div class="mb-3">
        <label class="form-label">Email <span class="required-info">*</span> :</label>
        <input name="ad_mail_admin" type="email" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Mot de passe <span class="required-info">*</span> :</label>
        <input name="mdp_admin" type="password" class="form-control w-50" required>
      </div>
      <button type="submit" class="btn btn-primary">se Connecter</button>
      <a href="{{ url('/administrateurs') }}" class="btn btn-link text-black">annuler</a>
    </form>
    {% if error %}
    <div class="alert alert-danger">{{ error }}</div>
    {% endif %}
  </main>
  {% endblock %}