{% extends 'layout.html.twig' %}
{% block title %}Connexion d'un créateur - {{ parent }}{% endblock %}
{% block content %}
 <main class="container">
    <h1>Connexion d'un compte créateur</h1>
    <form action="{{ url('/createurs/connexion') }}" method="post" class="w-100" enctype="multipart/form-data">
      {# <input type="hidden" name="_token" value="{{ csrf_token('createur_form') }}"> #}
      <div class="mb-3">
        <label class="form-label">Nom<span class="required-info">*</span> :</label>
        <input name="nom_createur" type="text" class="form-control w-100" required>
      </div>      
      <div class="mb-3">
        <label class="form-label">Email <span class="required-info">*</span> :</label>
        <input name="ad_mail_createur" type="email" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Mot de passe <span class="required-info">*</span> :</label>
        <input name="mdp_createur" type="password" class="form-control w-100" required>
      </div>
      <button type="submit" class="btn btn-primary">se Connecter</button>
      <a href="{{ url('/createurs') }}" class="btn btn-link text-black">annuler</a>
    </form>
    {% if error %}
    <div class="alert alert-danger">{{ error }}</div>
    {% endif %}
  </main>
  {% endblock %}