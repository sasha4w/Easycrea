{% extends 'layout.html.twig' %}
{% block title %}Ajouter - {{ parent }}{% endblock %}
{% block content %}
 <main class="container">
    <h1>Création d'un compte créateur</h1>
    <form action="{{ url('/createurs/ajouter') }}" method="post" class="w-50" enctype="multipart/form-data">
      {# <input type="hidden" name="_token" value="{{ csrf_token('createur_form') }}"> #}
      <div class="mb-3">
        <label class="form-label">Email <span class="required-info">*</span> :</label>
        <input name="ad_mail_createur" type="email" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Mot de passe <span class="required-info">*</span> :</label>
        <input name="mdp_createur" type="password" class="form-control w-50" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Nom<span class="required-info">*</span> :</label>
        <input name="nom_createur" type="text" class="form-control w-50" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Genre <span class="required-info">*</span> :</label>
        <select name="genre" class="form-control w-50" required>
          <option value="" disabled selected>Choisir le genre</option>
          <option value="Homme">Homme</option>
          <option value="Femme">Femme</option>
          <option value="Autres">Autres</option>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Date naissance <span class="required-info">*</span> :</label>
        <input name="ddn" type="date" class="form-control w-50" required max="{{ "now"|date("Y-m-d") }}">
      </div>
      <p class="text-danger fs-6">Les données marquées d'une astérisque sont obligatoires.</p>
      <button type="submit" class="btn btn-primary">Créer son compte créateur</button>
      <a href="{{ url('/') }}" class="btn btn-link text-black">annuler</a>
    </form>
    {% if error %}
    <div class="alert alert-danger">{{ error }}</div>
    {% endif %}
  </main>
  {% endblock %}