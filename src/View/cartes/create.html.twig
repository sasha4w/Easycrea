{% extends 'layout.html.twig' %}
{% block title %}Ajouter une carte - EasyCréa {% endblock %}
{% block content %}
 <main class="container">
    <h1></h1>
    <form action="{{ url('/cartes/ajouter') }}" method="post" class="w-50" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label">Texte <span class="required-info">*</span> :</label>
        <textarea name="texte_carte" id="texte_carte" class="form-control" rows="4" required></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label">Choix 1<span class="required-info">*</span> :</label>
        <input name="valeurs_choix1" type="number" placeholder="Population" class="form-control w-50" step="1" required>
        <input name="valeurs_choix1" type="number" placeholder="Finances" class="form-control w-50" step="1" required>        
      </div>
      <div class="mb-3">
        <label class="form-label">Choix 2<span class="required-info">*</span> :</label>
        <input name="valeurs_choix2" type="number" placeholder="Population" class="form-control w-50" step="1" required>
        <input name="valeurs_choix2" type="number" placeholder="Finances" class="form-control w-50" step="1" required>        
      </div>
      <p class="text-danger fs-6">Les données marquées d'une astérisque sont obligatoires.</p>
      <button type="submit" class="btn btn-primary">Créer la carte</button>
      <a href="{{ url('/cartes') }}" class="btn btn-link text-black">annuler</a>
    </form>
  </main>
  {% endblock %}