{% extends 'layout.html.twig' %}
{% block title %}Gestion des cartes - {{parent()}}{% endblock %}
{% block content %}
  <div class="container">
    {% if isLoggedInAsAdmin or isLoggedInAsCreateur %}
      {# Si l'utilisateur est connecté, afficher un message de bienvenue #}
    {% if ad_mail_admin %}
      <h1 class="display-1">Les cartes de {{ ad_mail_admin }} !</h1>
      {% else %}
      <h1 class="display-1">Les cartes de {{ nom_createur }} !</h1>
    {% endif %} 
      {# {% for deck in decks %} #}
      <div class="col-md-8">
        <a href="{{ url('/cartes/ajouter') }}" class="btn btn-primary m-4">Créer une carte</a>
      </div>
      {# {% endfor %} #}
  
    {% if cartes|length == 0  %}
    <p>Aucun deck n'est enregistré pour le moment.</p>
    {% endif %}

    {% for carte in cartes %}
    <section class="row mb-3 bg-light">
      <div class="col-md-8">
        <h2>{{ carte.id_deck }}</h2>
        <p class="m-0">{{ carte.texte_carte }}</p>
        <p class="m-0">{{ carte.valeurs_choix1 }}</p>
        <p class="m-0">{{ carte.valeurs_choix2 }}</p>                        
      <div class="col-md-2 position-relative">
        <div class="deck-operations">
          <a href="{{ url('/cartes/éditer/' ~  carte.id_carte ) }}" class="text-warning">éditer</a>
          <a href="{{ url('/cartes/effacer/' ~  deck.id_carte ) }}" class="text-danger">effacer</a>
        </div>
      </div> 
        {# <p class="m-0 text-muted fw-lighter ms-4">créer le
          {{ avatar.created_at|date( 'd/m/Y' ) }}  
          à {{ avatar.created_at|date( 'H:i' ) }}
        </p> #}
      </div>
    </section>
    {% endfor %}
    {% else %}
      {# Si l'utilisateur n'est pas connecté, afficher les options d'inscription et de connexion #}
      <h1 class="display-1">Vous ne pouvez pas accéder à cette page</h1>
 
    {% endif %}
    {% if ad_mail_admin %}
    <a href="{{ url('/administrateurs') }}" class="btn btn-primary btn-lg">Revenir sur la page administrateur</a>
      {% else %}
    <a href="{{ url('/createurs') }}" class="btn btn-primary btn-lg">Revenir sur la page créateur</a>
    {% endif %}     
  </div>
{% endblock %}

